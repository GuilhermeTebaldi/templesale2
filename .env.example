# Required in all environments.
# Use the Render External Database URL for local dev.
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE

# Frontend production API endpoint (set in Vercel env vars).
# Example: https://saleday-backend.onrender.com
VITE_API_BASE_URL=
# AntiImpostor agent settings (frontend).
# Optional override. If empty, frontend uses `http://localhost:3000`.
VITE_AGENT_API_BASE_URL=
VITE_AGENT_SITE_ID=ugo3ifae3

# Set to "false" only for local Postgres without SSL.
PGSSL=true

# Safety guard for local development.
# Keep "false" to block accidental use of a remote/production database in npm run dev.
ALLOW_REMOTE_DATABASE_IN_DEV=false
# When remote DB is intentionally allowed in dev, keep read-only on by default.
DEV_REMOTE_READ_ONLY=true

# Admin authentication
ADMIN_EMAIL=templesale@admin.com
ADMIN_PASSWORD=change_me
# Optional aliases accepted in login (comma/semicolon/newline separated).
ADMIN_EMAIL_ALIASES=
ADMIN_PASSWORD_ALIASES=
ADMIN_SESSION_SECRET=change_me_long_random_value
ADMIN_TEST_AREA_PASSWORD=@2t2b

# Cloudinary Product Environment
CLOUDINARY_CLOUD_NAME=dymox62b9
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_UPLOAD_FOLDER=templesale/products
CLEAN_LOCAL_PRODUCTS_ON_BOOT=false

PORT=5173
